#include <iostream> 
#define M 4 
#define N 4 
using namespace std; 
  
void print(int mat[M][N]) 
{ 
    for (int i = 0; i < M; i++) { 
    for(k=i;k<m;k++)
    {
    cout<<" ";
    }
    cout<<"\n";
    if (i % 2 == 0) { 
    for (int j = 0; j < N; j++) 
    cout << mat[i][j] << " ";
    } else { 
    for (int j = N - 1; j >= 0; j--) 
    cout << mat[i][j] << " "; 
    } 
    } 
} 
